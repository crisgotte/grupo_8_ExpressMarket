
 <%- include("partials/head.ejs")%>
 <body>	
     <%-include('partials/header.ejs') %>
     <h1> Listado de Productos</h1>
     
        <table class="table">
            <thead class="thead-dark">
              <tr>
                
                <th scope="col">NOMBRE</th>
                <th scope="col">PRECIO</th>
                <th scope="col">CATEGORIA</th>
                <th scope="col">DESCRIPCION</th>
                <th scope="col">EDITAR</th>
                <th scope="col">ELIMINAR</th>                
              </tr>
            </thead>
            <tbody> 
                <% for (let i = 0; i < productos.length; i++) { %> 
                    <tr>
                      <th scope="row"><a href="/productos/<%=productos[i].id%>"><%=productos[i].nombre%></a></td>
                       
                        <td>$<%=productos[i].precio%></td>
                        <td><%=productos[i].categoria.nombre%></td>
                        <td><%=productos[i].descripcion%></td>
                        <td><a href="/productos/editar/<%=productos[i].id%>"><button type="button" class="btn btn-info">E</button></a></td>
                        <td><form action="/productos/borrar/<%=productos[i].id%>" method="POST"><button type="submit" class="btn btn-danger">X</button></form></td>
                    </tr>
                <% } %> 
            </tbody>
          </table>
     



     <%-include("partials/footer.ejs")%>
    
 </body>


</html>