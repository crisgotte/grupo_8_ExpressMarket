<%-include('partials/head.ejs') %>

<body>
    <%-include('partials/header.ejs') %>
    <div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<% for (product of products { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="./productDetail/<%= products.id %>/almacen">
							<figure class="product-box_image">
								<img src="/images/products/<%= products.image %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2>$<%= thousandGenerator(finalPrice) %></h2>
								<span><%= products.discount %>% OFF</span>
								<p><%= products.name %></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
    </div>
   

    <%-include('partials/footer.ejs') %>

</body>

</html>
