<%-include('partials/head.ejs') %>

<body>
    <%-include('partials/header.ejs') %>
	
	<div class= "container" id= "products-wrapper">
		<div class = "row">
			<div class="col-12">
				<h2 class="products-title">Productos de Almac√©n</h2>
			</div>
			<% for (product of products) { 
				%>
			<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/detail/<%= product.id %>/visited">
					<figure class="product-box_image">
						<img src="/images/products/<%= product.imagen %>" alt="imagen de producto">
					</figure>
					<article class="product-box_data">					
						<p><%= product.nombre %></p>
						<p><%= product.mensaje %></p>
						<p class="estiloDelPrecio"><%= product.price %></p>
						<i class="fas fa-truck"></i>
		 			</article>
			</a>
	             </section>
			</div>
			<% } %>
		</div>
</div>
    <%-include('partials/footer.ejs') %>

</body>

</html>
